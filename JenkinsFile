pipeline {
    agent any

    environment {
        // Define the branch you want to build and deploy
        BUILD_BRANCH = 'main'
    }

    stages {
        stage('Checkout') {
            steps {
                // Check out the code from the specified branch
                checkout([$class: 'GitSCM', branches: [[name: "refs/heads/${BUILD_BRANCH}"]], userRemoteConfigs: [[url: scm.url]]])
            }
        }

        stage('Build and Deploy') {
            steps {
                // Assuming your website is static content (HTML, CSS, JS)
                // You can copy the files to a web server directory or use a tool like rsync
                sh 'rsync -avz --delete ./path/to/your/website/* /var/www/html/'
            }
        }
    }

    post {
        always {
            // Clean up or perform any other actions after the pipeline
            echo 'CI Pipeline completed!'
        }
    }
}
