pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
        
    }
    post 
    {
        always 
        {
            // Clean up or perform any other actions after the pipeline
            catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE')
            {
                echo 'CI Pipeline completed!'
            }
        }
    }
}