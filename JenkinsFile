pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Check out the code from the repository
                script {
                    checkout([
                        $class: 'GitSCM',
                        branches: [[name: '*/main']],  // Replace 'main' with your branch name
                        userRemoteConfigs: [[url: 'https://github.com/huzaifa-123/SPM-Semester-Project.git']]
                    ])
                }
            }
        }

        stage('Build and Deploy') {
            steps {
                // Assuming your website is static content (HTML, CSS, JS)
                // Copy the files to a web server directory
                script {
                    echo 'Copying files to the web server directory'
                    // Example: Copy all files to /var/www/html/
                    sh 'cp -r * /var/www/html/'
                }
            }
        }
    }

    post {
        always {
            // Clean up or perform any other actions after the pipeline
            echo 'CI Pipeline completed!'
        }
    }
}
